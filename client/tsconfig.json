{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "strict": false,
      "baseUrl": ".",
      "paths": {
         "*": ["./src/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
   },
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   },
   "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./config/jest/setupTests.ts"
   ]
}
